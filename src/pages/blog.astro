---
import Layout from "../layouts/Layout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<Layout title="blog">
    <h1>Blog</h1>
    <p>Coming soon...</p>
    <ul>
        {allPosts.map(post => 
            <BlogPost url={post.url as string} title={post.frontmatter.title} />
        )}
    </ul>
</Layout>